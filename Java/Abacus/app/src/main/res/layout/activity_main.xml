<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="444dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/display" android:backgroundTint="#E2EDF8" android:background="#BFDDE1"/>
    <GridLayout android:layout_width="match_parent" android:layout_height="256dp"
                android:background="@android:color/white">
        <Button
                android:text="7"
                android:background="@drawable/rounded_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/numberSeven" tools:layout_editor_absoluteY="322dp"
                tools:layout_editor_absoluteX="16dp"/>
        <Button
                android:text="8"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:id="@+id/numberEight" tools:layout_editor_absoluteY="390dp"
                tools:layout_editor_absoluteX="19dp"/>
        <Button
                android:text="9"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:id="@+id/numberNine" tools:layout_editor_absoluteY="457dp"
                tools:layout_editor_absoluteX="21dp"/>
        <Button
                android:text="4"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="1" android:layout_column="0"
                android:id="@+id/numberFour"/>
        <Button
                android:text="5"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="1" android:layout_column="1"
                android:id="@+id/numberFive"/>
        <Button
                android:text="6"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="1" android:layout_column="2"
                android:id="@+id/numberSix"/>
        <Button
                android:text="1"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="2" android:layout_column="0"
                android:id="@+id/numberOne"/>
        <Button
                android:text="2"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="2" android:layout_column="1"
                android:id="@+id/numberTwo"/>
        <Button
                android:text="3"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="2" android:layout_column="2"
                android:id="@+id/numberThree"/>
        <Button
                android:text="0"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="3" android:layout_column="1"
                android:id="@+id/numberZero"/>
        <Button
                android:text="+/-"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="3" android:layout_column="0"
                android:id="@+id/signal"/>
        <Button
                android:text="."
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="3" android:layout_column="2"
                android:id="@+id/point" android:textSize="18sp"/>
        <Button
                android:text="+"
                android:layout_width="145dp"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="0" android:layout_column="3"
                android:id="@+id/addButton" android:textColor="#56E806"/>
        <Button
                android:text="-"
                android:layout_width="145dp"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="1" android:layout_column="3"
                android:id="@+id/subtractButton" android:textColor="#56E806"/>
        <Button
                android:text="x"
                android:layout_width="143dp"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="2" android:layout_column="3"
                android:id="@+id/multiplicationButton" android:textColor="#56E806"/>
        <Button
                android:text="รท"
                android:layout_width="141dp"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="3" android:layout_column="3"
                android:id="@+id/divisionButton" android:textColor="#56E806"/>
        <Button
                android:text="="
                android:layout_width="143dp"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="4" android:layout_column="3"
                android:id="@+id/equalButton" android:backgroundTint="#56E806"/>
        <Button
                android:text="%"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="4" android:layout_column="2"
                android:id="@+id/button7"/>
        <Button
                android:text="( )"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="4" android:layout_column="1"
                android:id="@+id/parentheses"/>
        <Button
                android:text="C"
                android:layout_width="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:layout_height="wrap_content" android:layout_row="4" android:layout_column="0"
                android:id="@+id/clearButton" android:textColor="#C50303"/>
    </GridLayout>
</LinearLayout>